@if (IsVisible) 
{
    <div class="notice animated fadeInUp faster p-4">
        <p class="float-left">
            <span>This site uses cookies to improve the user experience.</span> 
            <a href="#">Read more</a>
        </p>
        <button class="btn btn-primary float-right" @onclick="Dismiss">OK</button>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    private void Dismiss()
    {
        IsVisible = !IsVisible;
    }
}
